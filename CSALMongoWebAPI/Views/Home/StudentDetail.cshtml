@using CSALMongoWebAPI.Util

@{
    ViewBag.Title = "Student " + Model.Student.UserID;
}

<!-- MAIN CONTENT -->
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            @{
                var completedCount = 0;
                foreach (var lesson in Model.Turns) {
                    if (lesson.Attempts > 0 && lesson.Completions >= lesson.Attempts) {
                        completedCount++;
                    }
                }
            }
            
            Completed <strong>@completedCount</strong> of <strong>@Model.Turns.Count</strong> lessons attempted
            <br />

            <table class="table table-striped">
                <caption>Lesson Information</caption>
                <thead>
                    <tr>
                        <th>Lesson Id</th>
                        <th>Last Activity</th>
                        <th>Times Attempted</th>
                        <th>Times Completed</th>
                        <th>Correct response rate</th>
                        <th>Total time spent on the lesson</th>
                        <th>Reading time</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lesson in Model.Turns) {
                        <tr>
                            <td><a href="~/home/lessondetails/@RenderHelp.URIEncode(lesson.LessonID)" class="lesson-link">@lesson.LessonID</a></td>
                            <td>@lesson.LastTurnTime</td>
                            <td>@lesson.Attempts</td>
                            <td>@lesson.Completions</td>
                            <td>???</td>
                            <td>@RenderHelp.HumanDuration(lesson.TotalDuration())</td>
                            <td>???</td>
                        </tr>                        
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> <!-- /container -->

@section ScriptFinal {
    <script>
        $(document).ready(function () {
            $('.apply-data-table').dataTable({
                "aaSorting": [] //No default sort
            });
            $(".lesson-link").addClass("hover-restore");
        });
    </script>
}
